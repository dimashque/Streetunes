@using Streetunes.ViewModel
@model UserDetailViewModel

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="row">
            <!-- Profile Info Section -->
            <div class="col-md-4 text-center">
                <img src="@(Model.ProfileImageUrl ?? "/images/default-profile.png")" class="rounded-circle img-fluid mb-3" alt="Profile Image" style="width: 150px; height: 150px; object-fit: cover;">
                <h2 class="fw-bold">@Model.UserName</h2>
                <p class="text-muted">@Model.City, @Model.State</p>
            </div>

            <!-- Recent Events Section -->
            <div class="col-md-8">
                <h3 class="fw-bold">Created Events</h3>
                @if (Model.CreatedEvents != null && Model.CreatedEvents.Any())
                {
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        @foreach (var ev in Model.CreatedEvents)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <img src="@(ev?.Image ?? "/images/default-event.jpg")" class="card-img-top" alt="@(ev?.Title ?? "Untitled Event")" style="height: 180px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">@ev?.Title</h5>
                                        <p class="card-text text-muted">@ev?.Date.ToString("MMM dd, yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No events were created.</p>
                }

                <h3 class="fw-bold mt-4">Attended Events</h3>
                @if (Model.Events != null && Model.Events.Any())
                {
                    <div class="row row-cols-1 row-cols-md-2 g-4">
                        @foreach (var ev in Model.Events)
                        {
                            <div class="col">
                                <div class="card h-100 shadow-sm">
                                    <img src="@(ev?.Image ?? "/images/default-event.jpg")" class="card-img-top" alt="@(ev?.Title ?? "Untitled Event")" style="height: 180px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">@ev?.Title</h5>
                                        <p class="card-text text-muted">@ev?.Date.ToString("MMM dd, yyyy")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No events were attended.</p>
                }
            </div>
        </div>
    </div>
</div>
