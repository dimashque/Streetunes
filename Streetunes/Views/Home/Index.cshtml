@using Streetunes.ViewModel
@model HomeViewModel

<style>
    body {
        background: url('https://www.urbanpresents.net/wp-content/uploads/2015/10/urban-art-teufelsberg-berlin-juli-2015-04259.jpg') no-repeat center center fixed; background-size: cover;
        color: #fff;
        font-family: 'Arial', sans-serif;
    }

    .hero {
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        background: rgba(0, 0, 0, 0.7);
        padding: 20px;
        border-radius: 10px;
    }

        .hero h1 {
            font-size: 4rem;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 3px;
        }

    .btn-custom {
        background: #ff5733;
        color: #fff;
        font-weight: bold;
        padding: 12px 25px;
        border-radius: 30px;
        text-transform: uppercase;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background: #ffcc00;
            color: #000;
        }

    .event-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 15px;
        border-radius: 10px;
        color: white;
        text-align: center;
        backdrop-filter: blur(5px);
    }

        .event-card img {
            border-radius: 10px;
            max-height: 200px;
            object-fit: cover;
        }

    h2 {
        text-shadow: 2px 2px 4px rgba(0,0,0,0.7);
    }
</style>


    <div class="container-fluid d-flex align-items-center justify-content-center" style="height: 80vh;">
        <div class="hero">
            <h1>Streetunes</h1>
            <p>The heartbeat of Berlin’s street music & art scene</p>

            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-custom">Vibe with US</a>
            }
        </div>
    </div>

    <div class="container mt-5">
        <h2 class="text-center mb-4">Upcoming Street Events</h2>
        <div class="row">
            @foreach (var ev in Model.Events)
            {
                <div class="col-md-4 mb-4">
                    <div class="event-card">
                        <img src="@ev.Image" class="img-fluid" alt="@ev.Title">
                        <h4 class="mt-2">@ev.Title</h4>
                        <p><strong>Location:</strong> @ev.Address.street, @ev.Address.City</p>
                        <p><strong>Date:</strong> @ev.Date.ToString("MMM dd, yyyy")</p>
                        <a href="/event/detail/@ev.Id" class="btn btn-outline-light">View Event</a>
                    </div>
                </div>
            }
        </div>
    </div>
   
