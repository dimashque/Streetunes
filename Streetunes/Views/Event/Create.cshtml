@using Streetunes.ViewModel
@using Streetunes.Data.Enum
@model CreateEventViewModel

@{
    ViewData["Title"] = "Create Event";
}

<div class="container mt-5">
    <h2 class="text-center text-black fw-bold mb-4">🎶 Create a New Event 🎨</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="card p-4 shadow-lg rounded bg-dark text-light">
                <input type="hidden" id="OwnerId" name="OwnerId" asp-for="OwnerId" />

                <!-- Title -->
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control rounded-3 bg-secondary text-light border-0" placeholder="Enter event title" required />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <!-- Date -->
                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-bold">Event Date</label>
                    <input asp-for="Date" type="datetime-local" class="form-control rounded-3 bg-secondary text-light border-0" required />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <!-- Image Upload -->
                <div class="mb-3">
                    <label asp-for="Image" class="form-label fw-bold">Upload Image</label>
                    <input asp-for="Image" type="file" class="form-control rounded-3 bg-secondary text-light border-0" accept="image/*" required />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="mb-3">
                    <label asp-for="EventCategory" class="form-label fw-bold">Category</label>
                    <select asp-for="EventCategory" asp-items="@Html.GetEnumSelectList<EventCategory>()" class="form-select rounded-3 bg-secondary text-light border-0">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="EventCategory" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control rounded-3 bg-secondary text-light border-0" rows="3" placeholder="Enter event description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Location Section -->
                <h4 class="mt-4 text-warning fw-bold">📍 Location</h4>

                <div class="mb-3">
                    <label asp-for="Street" class="form-label fw-bold">Street</label>
                    <input asp-for="Street" class="form-control rounded-3 bg-secondary text-light border-0" placeholder="Enter street name" />
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label fw-bold">City</label>
                    <input asp-for="City" class="form-control rounded-3 bg-secondary text-light border-0" placeholder="Enter city" />
                </div>

                <div class="mb-3">
                    <label asp-for="Region" class="form-label fw-bold">Region</label>
                    <input asp-for="Region" class="form-control rounded-3 bg-secondary text-light border-0" placeholder="Enter region" />
                </div>

                <div class="mb-3">
                    <label asp-for="PostalCode" class="form-label fw-bold">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control rounded-3 bg-secondary text-light border-0" placeholder="Enter postal code" />
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-warning w-100 fw-bold rounded-3 mt-3">🚀 Create Event</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
