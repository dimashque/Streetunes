@using Streetunes.Models
@model IEnumerable<Event>



<style>
    /* Street Art Inspired Funky Background */
    body {
        background: linear-gradient(135deg, #ff6f61, #f8cdda, #7f8c8d, #fdcb6e); /* Funky gradient */
        color: #fff;
        font-family: 'Arial', sans-serif;
        background-size: cover;
        background-attachment: fixed;
        animation: backgroundAnimation 10s infinite alternate; /* Animation effect */
    }

    /* Graffiti-inspired Hero Section */
    .hero {
        height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        background: rgba(0, 0, 0, 0.6); /* Semi-transparent black background */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0,0,0,0.5);
    }

    .hero h1 {
        font-size: 4rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 3px;
        text-shadow: 3px 3px 5px rgba(0,0,0,0.7);
        color: #ffcc00;
    }

    /* Custom Buttons */
    .btn-custom {
        background: #ff5733;
        color: #fff;
        font-weight: bold;
        padding: 12px 25px;
        border-radius: 30px;
        text-transform: uppercase;
        transition: 0.3s;
        border: 2px solid #ff5733;
    }

    .btn-custom:hover {
        background: #ffcc00;
        color: #000;
    }

    .btn-attend {
        background: #28a745;
        color: #fff;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 30px;
        text-transform: uppercase;
        transition: 0.3s;
        border: 2px solid #28a745;
    }

    .btn-attend:hover {
        background: #218838;
        color: #fff;
    }

    /* Event Card Design */
    .event-card {
        background: rgba(255, 255, 255, 0.15);
        padding: 15px;
        border-radius: 10px;
        color: white;
        text-align: center;
        backdrop-filter: blur(5px);
        box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.5);
        border: 2px solid #ff5733;
    }

    .event-card img {
        border-radius: 10px;
        max-height: 200px;
        object-fit: cover;
        border: 3px solid #fff;
    }

    h2 {
        text-shadow: 3px 3px 5px rgba(0,0,0,0.7);
    }

    
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Upcoming Street Events</h2>
    <div class="row">
        @foreach (var ev in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="event-card">
                    <img src="@ev.Image" class="img-fluid" alt="@ev.Title">
                    <h4 class="mt-2">@ev.Title</h4>
                    <p><strong>Location:</strong> @ev.Address.street, @ev.Address.City</p>
                    <p><strong>Date:</strong> @ev.Date.ToString("MMM dd, yyyy")</p>

                    <!-- View Button -->
                    <a asp-controller="Event" asp-action="Detail" asp-route-id="@ev.Id" class="btn btn-outline-light">View Event</a>

                    <!-- Attend Button -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="Attend" method="post">
                            <!-- Hidden EventId -->
                            <input type="hidden" name="EventId" value="@ev.Id" />

                            <button type="submit" class="btn btn-attend">Attend</button>
                        </form>
                    }
                    else
                    {
                        <p><a asp-controller="Account" asp-action="Login" class="btn btn-custom">Please login to attend</a></p>
                    }
                </div>
            </div>
        }
    </div>
</div>
